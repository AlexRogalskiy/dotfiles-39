#! /usr/bin/env bash

files=$(\
  ag \
    --hidden \
    --filename-pattern \
    '(.babelrc|coffee|html|ignore|jade|js|json|md|pug|sh|styl|svg|txt|yaml)$' \
)

echo 'Replace tabs with 2 spaces and use LF for newline:'

echo "$files" | while read -r file
do
  printf "%s" "$file"
  tab2space -unix -t2 "$file"{,}
  ex -scwq "$file"
  echo ' âœ”'
done
